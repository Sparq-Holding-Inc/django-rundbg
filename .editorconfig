# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 140

[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_size = 4

[*.py]
indent_size = 4

[*.{yml,yaml}]
indent_size = 4
trim_trailing_whitespace = false
max_line_length = 0

[*.json]
indent_size = 2
max_line_length = 0
